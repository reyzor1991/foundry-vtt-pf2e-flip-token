<form autocomplete="off">

    <fieldset class="row">
        <legend>At rest</legend>
        <div class="form-group">
            <label>Image path</label>
            <div class="form-fields">
                {{filePicker target="atRestImage" type="imagevideo"}}
                <input class="image" type="text" name="atRestImage" data-type="atRest" placeholder="path/image.png" value="{{atRest.path}}">
                <button type="button" class="flip-delete" data-type="atRest"><i class="fas fa-trash"></i></button>
            </div>
        </div>
        <div class="form-group">
            <label>Portrait path</label>
            <div class="form-fields">
                {{filePicker target="atRestImageP" type="imagevideo"}}
                <input class="portrait" type="text" name="atRestImageP" data-type="atRest" placeholder="path/image.png" value="{{atRest.portrait}}">
                <button type="button" class="flip-delete" data-type="atRest"><i class="fas fa-trash"></i></button>
            </div>
        </div>
        <div class="form-group scale">
            <label>Scale</label>
            <div class="form-fields">
                <input type="range" name="scale" value={{atRest.scale}} min="0.2" max="3.0" step="0.1" class="scale-value" data-type="atRest">
                <span class="range-value">{{atRest.scale}}</span>
            </div>
        </div>
    </fieldset>

    <fieldset class="row">
        <legend>Combat</legend>
        <div class="form-group">
            <label>Image path</label>
            <div class="form-fields">
                {{filePicker target="inCombatImage" type="imagevideo"}}
                <input class="image" type="text" name="inCombatImage" data-type="inCombat" placeholder="path/image.png" value="{{inCombat.path}}">
                <button type="button" class="flip-delete" data-type="inCombat"><i class="fas fa-trash"></i></button>
            </div>
        </div>
        <div class="form-group">
            <label>Portrait path</label>
            <div class="form-fields">
                {{filePicker target="inCombatImageP" type="imagevideo"}}
                <input class="portrait" type="text" name="inCombatImageP" data-type="inCombat" placeholder="path/image.png" value="{{inCombat.portrait}}">
                <button type="button" class="flip-delete" data-type="inCombat"><i class="fas fa-trash"></i></button>
            </div>
        </div>
        <div class="form-group scale">
            <label>Scale</label>
            <div class="form-fields">
                <input type="range" name="scale" value={{inCombat.scale}} min="0.2" max="3.0" step="0.1" class="scale-value" data-type="inCombat">
                <span class="range-value">{{inCombat.scale}}</span>
            </div>
        </div>
    </fieldset>

</form>